{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "name": "app-config",
            "host": {
                "sourcePath": "/var/app/current/mattermost/config"
            }
        },
        {
            "name": "app-data",
            "host": {
                "sourcePath": "/var/app/current/mattermost/data"
            }
        },
        {
            "name": "db",
            "host": {
                "sourcePath": "/var/db/current/var/lib/postgresql/data"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "app",
            "image": "npcode/mattermost-app:latest",
            "environment": [
                {
                    "name": "DB_PORT_5432_TCP_PORT",
                    "value": "5432"
                }
            ],
            "memory": 2048,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "db"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "app-config",
                    "containerPath": "/mattermost/config"
                },
                {
                    "sourceVolume": "app-data",
                    "containerPath": "/mattermost/data"
                }
            ]
        },
        {
            "name": "db",
            "image": "npcode/mattermost-db:latest",
            "memory": 2048,
            "mountPoints": [
                {
                    "sourceVolume": "db",
                    "containerPath": "/var/lib/postgresql/data"
                }
            ]
        }
    ]
}
